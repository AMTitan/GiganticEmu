<rxui:ReactiveUserControl x:Class="GiganticEmu.Launcher.SettingsContainerView" x:TypeArguments="local:SettingsContainerViewModel"
    xmlns:local="clr-namespace:GiganticEmu.Launcher"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:rxui="http://reactiveui.net"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <Button x:Name="ButtonCancel" TabIndex="4" DockPanel.Dock="Bottom" Margin="100,-5,100,0" Style="{StaticResource MaterialDesignFlatButton}" Content="Cancel" HorizontalAlignment="Center" />
        <Button x:Name="ButtonSave" TabIndex="3" DockPanel.Dock="Bottom" Content="Save Settings" Margin="100 20" HorizontalAlignment="Center" />

        <TabControl x:Name="ContentContainer" Background="#00000000" Height="250" BorderThickness="0" Width="480">
            <TabControl.ItemContainerStyle>
                <Style TargetType="{x:Type TabItem}">
                    <Setter Property="Visibility" Value="Collapsed" />
                </Style>
            </TabControl.ItemContainerStyle>
            <TabItem>
                <local:MainSettings x:Name="PageMainSettings" />
            </TabItem>
        </TabControl>
    </DockPanel>
</rxui:ReactiveUserControl>