<rxui:ReactiveUserControl x:Class="GiganticEmu.Launcher.LoginContainer"
            xmlns:local="clr-namespace:GiganticEmu.Launcher" 
             x:TypeArguments="local:LoginContainerViewModel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:rxui="http://reactiveui.net"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <TabControl x:Name="ContentContainer" Background="#00000000" Height="350" BorderThickness="0" Width="480">
        <TabControl.ItemContainerStyle>
            <Style TargetType="{x:Type TabItem}">
                <Setter Property="Visibility" Value="Collapsed"/>
            </Style>
        </TabControl.ItemContainerStyle>
        <TabItem>
            <local:Login x:Name="PageLogin"/>
        </TabItem>
        <TabItem>
            <local:Register x:Name="PageRegister"/>
        </TabItem>
    </TabControl>
</rxui:ReactiveUserControl>
