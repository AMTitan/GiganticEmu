@model GiganticEmu.Web.RegisterUser

@{
    ViewData["Title"] = "Register";
}


<h1>GiganticEmu Registration Form</h1>
<hr />
<div class="row">
    <div class="col-md-9">
        <form asp-action="PostDiscord">
            <div class="form-group">
                First we need to confirm your Discord Account.<br />
                Please press the button below to Start the Process.
                <br />
                <br />

                <div class="form-group">
                    <input type="submit" value="Log in using Discord" class="btn btn-primary" />
                </div>
            </div>
            <br />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <br />
            <b> @ViewBag.message </b>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
